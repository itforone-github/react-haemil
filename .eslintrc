{
  "parserOptions": {//버전과 소스 타입정하기
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true //jsx 쓰기
    }
  },
  "env": {//환경설정 브라우저 true node true
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [ //기본 규칙들 정하기
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [//plugins 불러올 때 쓰는 것
    "import",
    "react-hooks",
    "babel-plugin-styled-components",
    {
      "fileName": true,
      "displayName": true,
      "pure": true,
      "ssr": true
    }
  ],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/anchor-is-valid": "off"
  }
}